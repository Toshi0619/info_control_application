<%= render "shared/header" %> 

<div class="items-sell-contents">
  
  <div class="items-sell-main">
  　
    <h2 class="items-sell-title">【編集】<br>トラブルやお客様からのクレーム案件を編集ください</h2>
    <%= form_with model: @trouble, url:customer_trouble_path, local: true do |f| %>

    <%# 商品名と商品説明 %>
    <div class="new-items">
      <div class="weight-bold-text">
        案件名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :title, class:"items-text", id:"item-name", placeholder:"案件名（必須 100文字まで)", maxlength:"100" %>
      <br><br>
      <div class='form-text-wrap'>
       <label class="form-text">発生日</label>
       <span class="indispensable">必須</span>
      </div>
      <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :sdate,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1980,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
      <div class="items-explain">
        <div class="weight-bold-text">
          案件内容
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :detail, class:"items-text", id:"item-info", placeholder:"案件内容（必須 1000文字まで）" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    <%# /商品名と商品説明 %>

    <%# 商品名と商品説明 %>
    <div class="new-items">
      <div class="items-explain">
        <div class="weight-bold-text">
          対応内容
        </div>
        <%= f.text_area :content, class:"items-text", id:"item-info", placeholder:"対応内容" , rows:"7", maxlength:"1000" %>
      </div><br><br>
      <div class='form-text-wrap'>
       <label class="form-text">終了日</label>
      </div>
      <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :edate,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1980,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
    </div>
    <%# /商品名と商品説明 %>

    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "登録する" ,class:"sell-btn" %>
      <%=link_to 'トップにもどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

</div>